generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Question {
  id               Int       @id @default(autoincrement())
  url              String    @unique(map: "url") @db.VarChar(255)
  title            String?   @db.Text
  body             String?   @db.Text
  notfoundAt       DateTime? @db.DateTime(0)
  postId           Int?
  publishedAt      DateTime? @db.DateTime(0)
  miiboStatus      Int?
  miiboCommentedAt DateTime? @db.DateTime(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Questions")
}
